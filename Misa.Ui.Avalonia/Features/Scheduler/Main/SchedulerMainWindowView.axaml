<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Scheduler.Main.SchedulerMainWindowView"
             xmlns:vm="clr-namespace:Misa.Ui.Avalonia.Features.Scheduler.Main"
             x:DataType="vm:SchedulerMainWindowViewModel">
     
    <Grid RowDefinitions="Auto,*">
        <!-- Header with Add Button -->
        <StackPanel Grid.Row="0" 
                    Orientation="Horizontal"
                    Spacing="16"
                    Margin="16">
            <TextBlock Classes="misa-header" Text="Scheduler" />
            <Button Classes="misa-primary"
                    Content="Add Schedule"
                    Command="{Binding OpenAddScheduleCommand}"
                    HorizontalAlignment="Right" />
        </StackPanel>

        <!-- Content Area - shows current view -->
        <ContentControl Grid.Row="1"
                        Content="{Binding CurrentView}"
                        Margin="16" />
    </Grid>

</UserControl>
