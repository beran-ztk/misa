<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Tasks.Add.AddTaskView"
             xmlns:add="clr-namespace:Misa.Ui.Avalonia.Features.Tasks.Add"
             x:DataType="add:AddTaskViewModel">

    <Border Classes="misa-control">
        <Grid RowDefinitions="Auto,Auto,Auto"
              RowSpacing="{StaticResource SpacingLarge}">

            <!-- Header -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal"
                        Spacing="{StaticResource SpacingMedium}">
                <TextBlock Classes="misa-header" Text="Add Task" />
            </StackPanel>

            <!-- Form -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="Auto,*"
                  RowDefinitions="Auto,Auto,Auto,Auto"
                  RowSpacing="{StaticResource SpacingMedium}"
                  ColumnSpacing="{StaticResource SpacingLarge}">

                <!-- Title -->
                <TextBlock Grid.Row="0" Grid.Column="0" Classes="misa-label" Text="Title" />

                <StackPanel Grid.Row="0" Grid.Column="1" Spacing="{StaticResource SpacingSmall}">

                    <TextBox Classes="misa-input"
                             Watermark="Task title..."
                             Text="{Binding Title, Mode=TwoWay}"
                             TextChanged="TitleTextChangedEvent" />
                    
                    <TextBlock Classes="misa-error"
                               Text="{Binding ErrorMessageTitle}"
                               IsVisible="{Binding TitleHasValidationError}" />
                    
                    <Separator Foreground="{StaticResource BrushBorder}" HorizontalAlignment="Stretch"/>
                    
                </StackPanel>

                <!-- Category -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Classes="misa-label"
                           Text="Category" />

                <ComboBox Grid.Row="1" Grid.Column="1"
                          Classes="misa-input"
                          ItemsSource="{Binding Categories}"
                          SelectedValue="{Binding SelectedCategoryContract}"/>
                
                <!-- Priority -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Classes="misa-label"
                           Text="Priority" />

                <ComboBox Grid.Row="2" Grid.Column="1"
                          Classes="misa-input"
                          ItemsSource="{Binding Priorities}"
                          SelectedValue="{Binding SelectedPriorityContract}"/>
            </Grid>

            <!-- Footer / Actions -->
            <Grid Grid.Row="2"
                  Margin="0,8,0,0"
                  ColumnDefinitions="Auto,*,Auto,Auto"
                  VerticalAlignment="Center">

                <CheckBox Grid.Column="0"
                          Content="Create more"
                          IsChecked="{Binding CreateMore, Mode=TwoWay}"
                          VerticalAlignment="Center" />

                <StackPanel Grid.Column="2"
                            Orientation="Horizontal"
                            Spacing="8"
                            HorizontalAlignment="Right">
                    <Button Classes="misa-primary"
                            Content="Cancel" />
                    <Button Classes="misa-primary"
                            Content="Add"
                            Command="{Binding AddTaskCommand}" />
                </StackPanel>
            </Grid>
            
        </Grid>
    </Border>

</UserControl>
