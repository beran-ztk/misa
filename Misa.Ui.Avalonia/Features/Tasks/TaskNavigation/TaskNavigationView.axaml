<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Misa.Ui.Avalonia.Features.Tasks.TaskNavigation"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Tasks.TaskNavigation.TaskNavigationView"
             x:DataType="vm:TaskNavigationViewModel">

    <UserControl.Styles>
        <!-- Gemeinsame Toolbar-Höhe -->
        <Style Selector="Button.ToolbarButton">
            <Setter Property="Padding" Value="8,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style Selector="TextBox.ToolbarInput">
            <Setter Property="Padding" Value="6,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Styles>

    <Border BorderThickness="0,0,0,1"
            Padding="12"
            Background="{StaticResource BrushPrimaryBackground}"
            BorderBrush="{StaticResource BrushBorder}">

        <Grid ColumnDefinitions="Auto,*"
              ColumnSpacing="8">

            <!-- Add-Button -->
            <Button Grid.Column="0"
                    Classes="ToolbarButton"
                    Command="{Binding AddTaskCommand}">
                <Image Width="16"
                       Height="16"
                       Source="{SvgImage /Assets/Images/MainNavigation/plus-circle.svg}" />
            </Button>

            <!-- Search-Feld füllt den Rest -->
            <TextBox Grid.Column="1"
                     Margin="0,0,6,0"
                     Classes="ToolbarInput"
                     Padding="6,6,0,0"
                     Watermark="Search tasks..."
                     Width="200"
                     HorizontalAlignment="Right"/>
        </Grid>
    </Border>

</UserControl>
