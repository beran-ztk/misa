<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Tasks.Create.CreateView"
             xmlns:create="clr-namespace:Misa.Ui.Avalonia.Features.Tasks.Create"
             x:DataType="create:CreateViewModel">

    <Border Classes="misa-control">
        <Grid RowDefinitions="Auto,Auto,Auto"
              RowSpacing="{StaticResource SpacingLarge}">

            <!-- Header -->
            <StackPanel Orientation="Horizontal"
                        Spacing="{StaticResource SpacingMedium}"
                        Grid.Row="0">
                <TextBlock Classes="misa-header"
                           Text="Create Task" />
            </StackPanel>

            <!-- Form -->
            <Grid Grid.Row="1"
                  ColumnDefinitions="Auto,*"
                  RowDefinitions="Auto,Auto,Auto,Auto"
                  RowSpacing="{StaticResource SpacingMedium}"
                  ColumnSpacing="{StaticResource SpacingLarge}">

                <!-- Title -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Classes="misa-label"
                           Text="Title" />

                <StackPanel Grid.Row="0" Grid.Column="1"
                            Spacing="{StaticResource SpacingSmall}">

                    <TextBox Classes="misa-input"
                             Watermark="Task title..."
                             Text="{Binding Title, Mode=TwoWay}"
                             TextChanged="TitleTextChangedEvent" />
                    
                    <TextBlock Classes="misa-error"
                               Text="{Binding ErrorMessageTitle}"
                               IsVisible="{Binding TitleHasValidationError}" />
                    
                    <Separator Foreground="{StaticResource BrushBorder}" HorizontalAlignment="Stretch"/>
                    
                </StackPanel>

                <!-- Priority -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Classes="misa-label"
                           Text="Priority" />

                <ComboBox Grid.Row="1" Grid.Column="1"
                          Classes="misa-input"
                          ItemsSource="{Binding Priorities}"
                          SelectedValue="{Binding PriorityId}"
                          SelectedValueBinding="{Binding Id}"
                          DisplayMemberBinding="{Binding Name}" />

                <!-- Category -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Classes="misa-label"
                           Text="Category" />

                <ComboBox Grid.Row="2" Grid.Column="1"
                          Classes="misa-input"
                          ItemsSource="{Binding Categories}"
                          SelectedValue="{Binding CategoryId}"
                          SelectedValueBinding="{Binding Id}"
                          DisplayMemberBinding="{Binding Name}" />
            </Grid>

            <!-- Footer / Actions -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0">
                <Button Classes="misa-primary"
                        Content="Cancel"
                        Command="{Binding CancelCommand}" />
                <Button Classes="misa-primary"
                        Content="Create"
                        Command="{Binding CreateCommand}" />
            </StackPanel>
        </Grid>
    </Border>

</UserControl>
