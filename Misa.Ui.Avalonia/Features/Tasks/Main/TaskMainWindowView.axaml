<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Tasks.Main.TaskMainWindowView"
             xmlns:content="clr-namespace:Misa.Ui.Avalonia.Features.Tasks.Content"
             xmlns:header="clr-namespace:Misa.Ui.Avalonia.Features.Tasks.Header"
             xmlns:main="clr-namespace:Misa.Ui.Avalonia.Features.Tasks.Main"
             x:DataType="main:TaskMainWindowViewModel">

    <!-- Außenfläche -->
    <Border Background="{StaticResource BrushPrimaryBackground}"
            Padding="12">

        <!-- 2 Zeilen: Header / Content -->
        <Grid RowDefinitions="Auto,*"
              RowSpacing="12">

            <!-- Header über volle Breite -->
            <Border Grid.Row="0"
                    Background="{StaticResource BrushPrimaryBackground}"
                    BorderBrush="{StaticResource BrushBorder}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="12"
                    Padding="12">
                <header:TaskHeaderView DataContext="{Binding TaskHeader}" />
            </Border>

            <!-- Contentfläche: "Card"-Look -->
            <Border Grid.Row="1"
                    Background="{StaticResource BrushPrimaryBackgroundLight}"
                    CornerRadius="16"
                    Padding="12">

                <!-- 2 Spalten + dünner Splitter -->
                <Grid ColumnDefinitions="*,8,*"
                      ColumnSpacing="0">

                    <!-- Links: Liste-Container (greift optisch rein) -->
                    <Border Grid.Column="0"
                            Background="{StaticResource BrushPrimaryBackground}"
                            CornerRadius="14,0,0,14"
                            Padding="0"
                            Margin="0,0,-10,0"
                            BorderBrush="{StaticResource BrushBorder}"
                            BorderThickness="1">

                        <content:TaskContentView DataContext="{Binding Model}" />
                    </Border>

                    <!-- Splitter als "weichere" Zone -->
                    <GridSplitter Grid.Column="1"
                                  Width="8"
                                  Background="Transparent"
                                  HorizontalAlignment="Stretch" />

                    <!-- Rechts: Details-Container (links abgerundet, damit es "andockt") -->
                    <Border Grid.Column="2"
                            Background="{StaticResource BrushPrimaryBackground}"
                            CornerRadius="0,14,14,14"
                            Padding="12"
                            Margin="0,0,0,0"
                            BorderBrush="{StaticResource BrushBorder}"
                            BorderThickness="1">

                        <ContentControl Content="{Binding InfoView}" />
                    </Border>

                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>
