<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Details.Page.DetailPageView"
             xmlns:details="clr-namespace:Misa.Ui.Avalonia.Features.Details"
             xmlns:page="clr-namespace:Misa.Ui.Avalonia.Features.Details.Page"
             xmlns:information="clr-namespace:Misa.Ui.Avalonia.Features.Details.Information"
             x:DataType="page:DetailPageViewModel">

    <Border>
        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
                <TabItem Header="Information">
                    <information:InformationView 
                        DataContext="{Binding InformationViewModel}"/>
                </TabItem>
            </TabControl>
    </Border>
</UserControl>