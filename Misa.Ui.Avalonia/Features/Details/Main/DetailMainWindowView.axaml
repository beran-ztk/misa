<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Details.Main.DetailMainWindowView"
             xmlns:main="clr-namespace:Misa.Ui.Avalonia.Features.Details.Main"
             xmlns:base="clr-namespace:Misa.Ui.Avalonia.Features.Details.Information.Base"
             x:DataType="main:DetailMainWindowViewModel">

    <Border Background="{StaticResource BrushPrimaryBackgroundLighter}">
        <TabControl SelectedIndex="{Binding SelectedTabIndex}">
                <TabItem Header="Information">
                    <base:DetailInformationView 
                        DataContext="{Binding DetailInformationViewModel}"/>
                </TabItem>
            </TabControl>
    </Border>
</UserControl>