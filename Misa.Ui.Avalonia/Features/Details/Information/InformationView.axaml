        <ContentControl Content="{Binding Session}"/>
        
        <Border Padding="12"
                Margin="10"
                CornerRadius="10"
                BorderThickness="1"
                BorderBrush="{StaticResource BrushBorder}"
                Background="{StaticResource BrushPrimaryBackgroundLighter}">

            <StackPanel Spacing="12">
                <TextBlock Text="Information"
                           FontSize="16"
                           Margin="10"
                           FontWeight="SemiBold"/>
                <!-- Top meta -->
                <Grid ColumnDefinitions="140,*,Auto" 
                      RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" 
                      RowSpacing="6">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Id" Opacity="0.7"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Parent.ItemOverview.Item.Id}"/>
                    <Button Grid.Row="0" Grid.Column="2" 
                            Classes="misa-action"
                            ToolTip.Tip="Copy"
                            Command="{Binding CopyIdCommand}">
                        <Image Width="16" Height="16" Source="{SvgImage /Assets/Images/Details/copy.svg}"/>
                    </Button>
                    
                    <!-- Title -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Title" Opacity="0.7"/>

                    <Grid Grid.Row="1" Grid.Column="1"
                          ColumnDefinitions="*"
                          RowDefinitions="Auto,Auto"
                          RowSpacing="6">

                        <!-- Display mode -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Parent.ItemOverview.Item.Title}"
                                   TextWrapping="Wrap"
                                   IsVisible="{Binding !IsEditTitleFormOpen}"/>

                        <!-- Edit mode -->
                        <TextBox Grid.Row="0" Grid.Column="0"
                                 Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 IsVisible="{Binding IsEditTitleFormOpen}"/>

                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    HorizontalAlignment="Left"
                                    IsVisible="{Binding IsEditTitleFormOpen}">

                            <!-- Cancel -->
                            <Button Classes="misa-action"
                                    Command="{Binding CloseEditTitleFormCommand}">
                                <TextBlock Text="Cancel"/>
                            </Button>

                            <!-- Save -->
                            <Button Classes="misa-action"
                                    Command="{Binding UpdateTitleTaskCommand}">
                                <TextBlock Text="Save"/>
                            </Button>

                        </StackPanel>
                    </Grid>

                    <Button Grid.Row="1" Grid.Column="2"
                            Classes="misa-action"
                            ToolTip.Tip="Edit"
                            Command="{Binding ShowEditTitleFormCommand}"
                            IsVisible="{Binding !IsEditTitleFormOpen}">
                        <Image Width="16" Height="16"
                               Source="{SvgImage /Assets/Images/Details/pencil.svg}"/>
                    </Button>
                    

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Created" Opacity="0.7"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Text="{Binding Parent.ItemOverview.Entity.CreatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Updated" Opacity="0.7"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                               Text="{Binding Parent.ItemOverview.Entity.UpdatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Interacted" Opacity="0.7"/>
                    <TextBlock Grid.Row="4" Grid.Column="1"
                               Text="{Binding Parent.ItemOverview.Entity.InteractedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>
                </Grid>


                <!-- Cards -->
                <UniformGrid Columns="2" Rows="2" HorizontalAlignment="Stretch">
                    
                    <!-- Workflow -->
                    <Border Classes="misa-detail-information-item">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Workflow" Opacity="0.7" FontSize="12"/>
                            <TextBlock Text="{Binding Parent.ItemOverview.Entity.Workflow}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                    <!-- State -->
                    <Border Classes="misa-detail-information-item">
                        <Grid>
                            <!-- Content -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="State" Opacity="0.7" FontSize="12"/>
                                <TextBlock Text="{Binding Parent.ItemOverview.Item.State.Name}"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Parent.ItemOverview.Item.State.Synopsis}"
                                           TextWrapping="Wrap"
                                           Opacity="0.85"/>
                            </StackPanel>

                            <Button Classes="misa-detail-information-item"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Command="{Binding EditStateCommand}"
                                    Margin="2">
                            
                                <Image Width="14"
                                       Height="14"
                                       Source="{SvgImage /Assets/Images/Details/pencil.svg}"/>
                            </Button>
                            
                            <!-- Edit overlay (shown only when editing) -->
                            <Border IsVisible="{Binding IsEditStateOpen}"
                                    Background="{StaticResource BrushPrimaryBackground}"
                                    BorderBrush="{StaticResource BrushBorder}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Padding="12">
                            
                                <StackPanel Spacing="10">
                            
                                    <TextBlock Text="{Binding Parent.ItemOverview.Item.State.Name, StringFormat='Edit State → {0}'}"
                                               FontWeight="SemiBold"/>
                            
                                    <ComboBox Classes="misa-input"
                                              ItemsSource="{Binding SettableStates}"
                                              SelectedValue="{Binding StateId}"
                                              SelectedValueBinding="{Binding Id}"
                                              DisplayMemberBinding="{Binding Name}" />
                            
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Spacing="8">
                            
                                        <Button Classes="misa-action"
                                                Content="Cancel"
                                                Command="{Binding CloseEditStateCommand}"/>
                            
                                        <Button Classes="misa-action"
                                                Content="Save"
                                                Command="{Binding SaveEditStateCommand}"/>
                                    </StackPanel>
                            
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Priority -->
                    <Border Classes="misa-detail-information-item">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Priority" Opacity="0.7" FontSize="12"/>
                            <TextBlock Text="{Binding Parent.ItemOverview.Item.Priority}" FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>

            </StackPanel>
        </Border>
        
        <ContentControl Content="{Binding Description}"/>
        
    </StackPanel>
</ScrollViewer>
</UserControl>
