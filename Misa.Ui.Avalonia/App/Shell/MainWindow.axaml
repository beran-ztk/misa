<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:Misa.Ui.Avalonia.App.Shell"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Misa.Ui.Avalonia.App.Shell.MainWindow"
        x:DataType="shell:MainWindowViewModel"
        Icon="/Assets/Images/Shells/nanoparticle.png"
        Title="Misa">

    <Grid ColumnDefinitions="100,*,1,Auto">

        <ContentControl Grid.Column="0"
                        Content="{Binding Navigation}" 
                        Background="{StaticResource BrushPrimaryBackground}"/>

        <ContentControl Grid.Column="1"
                        Background="{StaticResource BrushPrimaryBackground}"
                        Content="{Binding CurrentViewModel}" />
        
        <GridSplitter Grid.Column="2"
                      Background="{StaticResource BrushPanelBackground}"/>
        
        <ContentControl Grid.Column="3"
                        Background="{StaticResource BrushPrimaryBackground}"
                        Content="{Binding CurrentInfoViewModel}" />
    </Grid>
</Window>