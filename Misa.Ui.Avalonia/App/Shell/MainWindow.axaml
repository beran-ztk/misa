<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:Misa.Ui.Avalonia.App.Shell"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Misa.Ui.Avalonia.App.Shell.MainWindow"
        x:DataType="shell:MainWindowViewModel"
        Icon="/Assets/Images/Shells/nanoparticle.png"
        Title="Misa">

    <Grid RowDefinitions="40,*,20">

        <shell:TitleBarView Grid.Row="0"
                            DataContext="{Binding TitleBar}" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1" />
                <ColumnDefinition Width="Auto" MaxWidth="780"/>
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
                
            <shell:NavigationView Grid.Column="0"
                                  DataContext="{Binding Navigation}" />

            <ContentControl Grid.Column="1"
                            Background="{StaticResource BrushPrimaryBackground}"
                            Content="{Binding CurrentViewModel}" />
        
            <GridSplitter Grid.Column="2"
                          Background="{StaticResource BrushPanelBackground}"/>
        
            <ContentControl Grid.Column="3"
                            Background="{StaticResource BrushPrimaryBackground}"
                            Content="{Binding CurrentInfoViewModel}" />

            <shell:InfoBarView Grid.Column="4"
                               DataContext="{Binding InfoBar}" />
        </Grid>
        
        <shell:StatusBarView Grid.Row="2"
                             DataContext="{Binding StatusBar}" />
    </Grid>
</Window>