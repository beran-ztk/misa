<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Misa.Ui.Avalonia.App"
             xmlns:local="using:Misa.Ui.Avalonia"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
             
    <Application.Resources>

        <x:Double x:Key="FontSizeSmall">10</x:Double>
        <x:Double x:Key="FontSizeAverage">12</x:Double>
        <x:Double x:Key="FontSizeMedium">14</x:Double>
        <x:Double x:Key="FontSizeLarge">16</x:Double>
        <x:Double x:Key="FontSizeBig">20</x:Double>
        <x:Double x:Key="FontSizeTitle">24</x:Double>
            
        <x:Double x:Key="SpacingSmall">4</x:Double>
        <x:Double x:Key="SpacingMedium">8</x:Double>
        <x:Double x:Key="SpacingLarge">12</x:Double>
            
        <!-- Primäre Basistöne -->
        <Color x:Key="ColorPrimaryBackground">#121417</Color>
        <Color x:Key="ColorSecondaryBackground">#161916</Color>
        <Color x:Key="ColorPanelBackground">#233549</Color>
        <Color x:Key="ColorHover">#2F4762</Color>               <!-- Hover für Buttons -->
        <Color x:Key="ColorActive">#3D5A80</Color>              <!-- Active / Selected-Element -->

        <!-- Textfarben -->
        <Color x:Key="ColorTextPrimary">#E6EAF0</Color>
        <Color x:Key="ColorTextSecondary">#B5C0CC</Color>
        <Color x:Key="ColorTextFaded">#8090A0</Color>

        <!-- Borders -->
        <Color x:Key="ColorBorder">#4F5A66</Color>
        <Color x:Key="ColorBorderLight">#6B7682</Color>

        <!-- Akzentfarben -->
        <Color x:Key="ColorAccent">#4A90E2</Color>
        <Color x:Key="ColorAccentDim">#2E6BBE</Color>

        <!-- Erfolg / Warnung / Fehler (für Status-Leiste) -->
        <Color x:Key="ColorSuccess">#4CAF50</Color>
        <Color x:Key="ColorWarning">#FFC107</Color>
        <Color x:Key="ColorError">#F44336</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BrushPrimaryBackground" Color="{StaticResource ColorPrimaryBackground}" />
        <SolidColorBrush x:Key="BrushSecondaryBackground" Color="{StaticResource ColorSecondaryBackground}" />
        <SolidColorBrush x:Key="BrushPanelBackground" Color="{StaticResource ColorPanelBackground}" />
        <SolidColorBrush x:Key="BrushHover" Color="{StaticResource ColorHover}" />
        <SolidColorBrush x:Key="BrushActive" Color="{StaticResource ColorActive}" />
        <SolidColorBrush x:Key="BrushTextPrimary" Color="{StaticResource ColorTextPrimary}" />
        <SolidColorBrush x:Key="BrushTextSecondary" Color="{StaticResource ColorTextSecondary}" />
        <SolidColorBrush x:Key="BrushTextFaded" Color="{StaticResource ColorTextFaded}" />
        <SolidColorBrush x:Key="BrushBorder" Color="{StaticResource ColorBorder}" />
        <SolidColorBrush x:Key="BrushBorderLight" Color="{StaticResource ColorBorderLight}" />
        <SolidColorBrush x:Key="BrushAccent" Color="{StaticResource ColorAccent}" />
        <SolidColorBrush x:Key="BrushAccentDim" Color="{StaticResource ColorAccentDim}" />
        <SolidColorBrush x:Key="BrushSuccess" Color="{StaticResource ColorSuccess}" />
        <SolidColorBrush x:Key="BrushWarning" Color="{StaticResource ColorWarning}" />
        <SolidColorBrush x:Key="BrushError" Color="{StaticResource ColorError}" />

    </Application.Resources>
             
     <Application.Styles>
         <FluentTheme />
         <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />

         <Style Selector="TextBlock.misa-header">
             <Setter Property="FontSize" Value="28" />
             <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}" />
             <Setter Property="FontWeight" Value="Medium" />
             <Setter Property="Opacity" Value="0.9" />
             <Setter Property="Margin" Value="0,0,0,16" />
         </Style>

    <!-- MISA: Card Container -->
        <Style Selector="Border.misa-control">
            <Setter Property="Background" Value="{StaticResource BrushPrimaryBackground}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="26" />
            <Setter Property="Margin" Value="8" />
        </Style>

        <!-- MISA: Labels -->
        <Style Selector="TextBlock.misa-label">
            <Setter Property="Foreground" Value="{StaticResource BrushTextSecondary}" />
            <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}" />
            <Setter Property="Margin" Value="0,8,0,2" />
        </Style>

        <!-- MISA: Error Text -->
        <Style Selector="TextBlock.misa-error">
            <Setter Property="Foreground" Value="{StaticResource BrushError}" />
            <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}" />
            <Setter Property="Margin" Value="0,2,0,4" />
        </Style>

        <!-- MISA: Input-TextBox -->
        <Style Selector="TextBox.misa-input">
            <Setter Property="Background" Value="{StaticResource BrushPrimaryBackground}" />
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,8" />
            <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}" />
        </Style>

        <!-- MISA: ComboBox -->
        <Style Selector="ComboBox.misa-input">
            <Setter Property="Background" Value="{StaticResource BrushPrimaryBackground}" />
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="4" />
            <Setter Property="Padding" Value="8,8" />
            <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}" />
            <Setter Property="Width" Value="180" />
        </Style>

        <!-- MISA: Primary Button -->
        <Style Selector="Button.misa-primary">
            <Setter Property="Background" Value="{StaticResource BrushAccent}" />
            <Setter Property="Foreground" Value="{StaticResource BrushTextPrimary}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushAccentDim}" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="FontSize" Value="{StaticResource FontSizeMedium}" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
     </Application.Styles>
</Application>