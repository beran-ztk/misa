<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Views.Items.ItemView"
             xmlns:vm="clr-namespace:Misa.Ui.Avalonia.ViewModels.Items"
             xmlns:views="clr-namespace:Misa.Ui.Avalonia.Views.Items"
             xmlns:entityViews="clr-namespace:Misa.Ui.Avalonia.Views.Details"
             x:DataType="vm:ItemViewModel">
    
    <Border>
        <Grid ColumnDefinitions="*,*">
            <Border Grid.Column="0"
                    BorderThickness="0,0,1,0"
                    BorderBrush="{StaticResource BrushBorder}">
                <Grid RowDefinitions="40,*">
                
                    <views:ItemNavigationView Grid.Row="0"
                                              DataContext="{Binding Navigation}" />
                    <views:ItemListView Grid.Row="1"
                                              DataContext="{Binding ListModel}" />
                </Grid>
            </Border>
            
            
            <entityViews:DetailMainDetailView
                Grid.Column="1"
                DataContext="{Binding DetailViewModel}"/>
            
        </Grid>
    </Border>
    
</UserControl>
