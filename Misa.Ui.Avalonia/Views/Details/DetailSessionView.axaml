<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Misa.Ui.Avalonia.Views.Details.DetailSessionView"
             xmlns:vm="clr-namespace:Misa.Ui.Avalonia.ViewModels.Details"
             x:DataType="vm:DetailMainDetailViewModel">

    <ScrollViewer>
        <StackPanel>
            
            <Border Padding="12"
                    Margin="10"
                    CornerRadius="10"
                    BorderThickness="1"
                    BorderBrush="{StaticResource BrushBorder}"
                    Background="{StaticResource BrushPrimaryBackgroundLighter}">

                <StackPanel Spacing="12">
                    <TextBlock Text="{Binding DetailedEntity.Sessions.Count, StringFormat='Sessions ({0})'}"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="10"/>

                    <ItemsControl ItemsSource="{Binding DetailedEntity.Sessions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="10,6"
                                        Background="{StaticResource BrushPrimaryBackground}"
                                        CornerRadius="10"
                                        BorderThickness="1"
                                        BorderBrush="{StaticResource BrushBorder}">
                    
                                    <Grid ColumnDefinitions="6,*">
                    
                                        <!-- Accent bar -->
                                        <Border Background="{StaticResource BrushAccent}"
                                                CornerRadius="10,0,0,10"
                                                Padding="12"/>
                    
                                        <StackPanel Grid.Column="1" Spacing="6" Margin="10">
                    
                                            <!-- Top line: time -->
                                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                                <TextBlock Grid.Row="0" Grid.Column="0"
                                                           Text="{Binding CreatedAtUtc, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                                           Opacity="0.85"/>
                    
                                                <!-- <TextBlock Grid.Row="0" Grid.Column="1" -->
                                                <!--            Text="{Binding EndedAtUtc, StringFormat={}{0:yyyy-MM-dd HH:mm}}" -->
                                                <!--            Opacity="0.65"/> -->
                                            </Grid>
                    
                                            <!-- Efficiency / Concentration -->
                                            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                                                <StackPanel>
                                                    <TextBlock Text="Efficiency" FontSize="11" Opacity="0.6"/>
                                                    <TextBlock Text="{Binding Efficiency.Name}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Efficiency.Synopsis}" TextWrapping="Wrap" Opacity="0.75"/>
                                                </StackPanel>
                    
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="Concentration" FontSize="11" Opacity="0.6"/>
                                                    <TextBlock Text="{Binding Concentration.Name}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Concentration.Synopsis}" TextWrapping="Wrap" Opacity="0.75"/>
                                                </StackPanel>
                                            </Grid>
                    
                                            <!-- Objective / Summary -->
                                            <StackPanel Spacing="2">
                                                <TextBlock Text="Objective" FontSize="11" Opacity="0.6"
                                                           IsVisible="{Binding Objective}"/>
                                                <TextBlock Text="{Binding Objective}" TextWrapping="Wrap"
                                                           IsVisible="{Binding Objective}"/>
                    
                                                <TextBlock Text="Summary" FontSize="11" Opacity="0.6"
                                                           Margin="0,6,0,0"
                                                           IsVisible="{Binding Summary}"/>
                                                <TextBlock Text="{Binding Summary}" TextWrapping="Wrap"
                                                           IsVisible="{Binding Summary}"/>
                                            </StackPanel>
                    
                                            <!-- Planned / Autostop -->
                                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*" ColumnSpacing="10">
                                                <TextBlock Grid.Row="0" Text="{Binding PlannedDuration, StringFormat='Planned Duration: {0:hh\\:mm\\:ss}'}"
                                                           Opacity="0.75"/>
                                                
                                                <TextBlock Grid.Row="1" Text="{Binding WasAutomaticallyStopped, StringFormat='Actual Duration: {0:hh\\:mm\\:ss}'}" Opacity="0.75"/>
                                                <TextBlock Grid.Row="2" Text="{Binding StopAutomatically, StringFormat='AutoStop: {0}'}" Opacity="0.75"/>
                                            </Grid>
                    
                                            <TextBlock Text="{Binding AutoStopReason, StringFormat='Reason: {0}'}"
                                                       Opacity="0.65"
                                                       TextWrapping="Wrap"
                                                       IsVisible="{Binding AutoStopReason}"/>
                    
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
