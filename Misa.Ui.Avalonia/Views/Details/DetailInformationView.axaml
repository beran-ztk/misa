        <!-- </Border> -->
        
        <Border Padding="12"
                Margin="10"
                CornerRadius="10"
                BorderThickness="1"
                BorderBrush="{StaticResource BrushBorder}"
                Background="{StaticResource BrushPrimaryBackgroundLighter}">

            <StackPanel Spacing="12">
                <TextBlock Text="Information"
                           FontSize="16"
                           Margin="10"
                           FontWeight="SemiBold"/>
                <!-- Top meta -->
                <Grid ColumnDefinitions="140,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" RowSpacing="6">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="ID" Opacity="0.7"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Parent.DetailedEntity.Id}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Title" Opacity="0.7"/>

                    <Grid Grid.Row="1" Grid.Column="1"
                          ColumnDefinitions="*,Auto"
                          RowDefinitions="Auto,Auto"
                          RowSpacing="8"
                          ColumnSpacing="10">

                        <!-- Display mode -->
                        <TextBlock Grid.Row="0" Grid.Column="0"
                                   Text="{Binding Parent.DetailedEntity.Item.Title}"
                                   TextWrapping="Wrap"
                                   IsVisible="{Binding !IsEditTitleFormOpen}"/>

                        <Button Grid.Row="0" Grid.Column="1"
                                Classes="misa-action"
                                Command="{Binding ShowEditTitleFormCommand}"
                                IsVisible="{Binding !IsEditTitleFormOpen}">
                            <Image Width="16" Height="16"
                                   Source="{SvgImage /Assets/Images/Details/pencil.svg}"/>
                        </Button>

                        <!-- Edit mode -->
                        <TextBox Grid.Row="1" Grid.Column="0"
                                 Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 IsVisible="{Binding IsEditTitleFormOpen}"/>

                        <StackPanel Grid.Row="1" Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="8"
                                    HorizontalAlignment="Right"
                                    IsVisible="{Binding IsEditTitleFormOpen}">

                            <!-- Cancel -->
                            <Button Classes="misa-action"
                                    Command="{Binding CloseEditTitleFormCommand}">
                                <TextBlock Text="Cancel"/>
                            </Button>

                            <!-- Save -->
                            <Button Classes="misa-action"
                                    Command="{Binding UpdateTitleTaskCommand}">
                                <TextBlock Text="Save"/>
                            </Button>

                        </StackPanel>
                    </Grid>

                    

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Created" Opacity="0.7"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Text="{Binding Parent.DetailedEntity.CreatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Updated" Opacity="0.7"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                               Text="{Binding Parent.DetailedEntity.UpdatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Interacted" Opacity="0.7"/>
                    <TextBlock Grid.Row="4" Grid.Column="1"
                               Text="{Binding Parent.DetailedEntity.InteractedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>
                    
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Session Count" Opacity="0.7"/>
                    <TextBlock Grid.Row="5" Grid.Column="1"
                               Text="{Binding Parent.DetailedEntity.Sessions.Count}"/>
                </Grid>


                <!-- Cards -->
                <UniformGrid Columns="2" Rows="2" HorizontalAlignment="Stretch">
                    
                    <!-- Workflow -->
                    <Border Classes="misa-detail-information-item">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Workflow" Opacity="0.7" FontSize="12"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Workflow.Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Workflow.Synopsis}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                    <!-- State -->
                    <Border Classes="misa-detail-information-item">
                        <Grid>
                            <!-- Content -->
                            <StackPanel Spacing="6">
                                <TextBlock Text="State" Opacity="0.7" FontSize="12"/>
                                <TextBlock Text="{Binding Parent.DetailedEntity.Item.State.Name}"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="{Binding Parent.DetailedEntity.Item.State.Synopsis}"
                                           TextWrapping="Wrap"
                                           Opacity="0.85"/>
                            </StackPanel>

                            <Button Classes="misa-detail-information-item"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Command="{Binding EditStateCommand}"
                                    Margin="2">
                            
                                <Image Width="14"
                                       Height="14"
                                       Source="{SvgImage /Assets/Images/Details/pencil.svg}"/>
                            </Button>
                            
                            <!-- Edit overlay (shown only when editing) -->
                            <Border IsVisible="{Binding IsEditStateOpen}"
                                    Background="{StaticResource BrushPrimaryBackground}"
                                    BorderBrush="{StaticResource BrushBorder}"
                                    BorderThickness="1"
                                    CornerRadius="10"
                                    Padding="12">
                            
                                <StackPanel Spacing="10">
                            
                                    <TextBlock Text="{Binding Parent.DetailedEntity.Item.State.Name, StringFormat='Edit State → {0}'}"
                                               FontWeight="SemiBold"/>
                            
                                    <ComboBox Classes="misa-input"
                                              ItemsSource="{Binding SettableStates}"
                                              SelectedValue="{Binding StateId}"
                                              SelectedValueBinding="{Binding Id}"
                                              DisplayMemberBinding="{Binding Name}" />
                            
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Right"
                                                Spacing="8">
                            
                                        <Button Classes="misa-action"
                                                Content="Cancel"
                                                Command="{Binding CloseEditStateCommand}"/>
                            
                                        <Button Classes="misa-action"
                                                Content="Save"
                                                Command="{Binding SaveEditStateCommand}"/>
                                    </StackPanel>
                            
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Priority -->
                    <Border Classes="misa-detail-information-item">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Priority" Opacity="0.7" FontSize="12"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Item.Priority.Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Item.Priority.Synopsis}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                    <!-- Category -->
                    <Border Classes="misa-detail-information-item">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Category" Opacity="0.7" FontSize="12"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Item.Category.Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Item.Category.Synopsis}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>

            </StackPanel>
        </Border>


        <!-- Descriptions Header (nur wenn Liste nicht leer) -->
        <Border Padding="12"
                Margin="10"
                CornerRadius="10"
                BorderThickness="1"
                BorderBrush="{StaticResource BrushBorder}"
                Background="{StaticResource BrushPrimaryBackgroundLighter}"
                IsVisible="{Binding Parent.HasDetailedEntity}">
            
            <StackPanel Spacing="12">
                <TextBlock Text="{Binding Parent.DetailedEntity.DescriptionCount, StringFormat='Descriptions ({0})'}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="10"/>

                <ItemsControl ItemsSource="{Binding Parent.DetailedEntity.Descriptions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10,6"
                                    Padding="0"
                                    Background="{StaticResource BrushPrimaryBackground}"
                                    CornerRadius="10"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource BrushBorder}">

                                <Grid ColumnDefinitions="6,*">
                                    <!-- Accent bar -->
                                    <Border Background="{StaticResource BrushAccent}"
                                            CornerRadius="10,0,0,10"
                                            Padding="12"/>

                                    <StackPanel Grid.Column="1"  Spacing="2" Margin="10">
                                        <TextBlock Text="{Binding Type.Name}"
                                                   FontSize="12"
                                                   Opacity="0.7"/>

                                        <TextBlock Text="{Binding Content}"
                                                   FontSize="13"
                                                   TextWrapping="Wrap"/>

                                        <TextBlock Text="{Binding CreatedAtUtc, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                                   HorizontalAlignment="Right"
                                                   Opacity="0.6"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


                <!-- Add Description -->
                <Border Padding="10">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="10"
                          VerticalAlignment="Center">

                        <TextBox Grid.Column="0"
                                 Classes="misa-input"
                                 Watermark="Description..."
                                 Foreground="{StaticResource BrushTextPrimary}"
                                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />

                        <Button Grid.Column="1"
                                Width="38"
                                Height="38"
                                Background="{StaticResource BrushPrimaryBackground}"
                                BorderBrush="{StaticResource BrushBorder}"
                                BorderThickness="1"
                                Command="{Binding AddDescriptionCommand}">
                            <Image Width="16"
                                   Height="16"
                                   Source="{SvgImage /Assets/Images/MainNavigation/plus-circle.svg}" />
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
        
        
    </StackPanel>
</ScrollViewer>
</UserControl>
