        <!--                    FontWeight="SemiBold"/> -->
        <!-- -->
        <!--         <Grid ColumnDefinitions="140,*" -->
        <!--               RowDefinitions="Auto,Auto,Auto,Auto,Auto" -->
        <!--               RowSpacing="8" -->
        <!--               ColumnSpacing="10"> -->
        <!-- -->
        <!--             <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Title" /> -->
        <!--             <TextBox Grid.Row="0" Grid.Column="1" -->
        <!--                      Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/> -->
        <!--              -->
        <!--             <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="State" /> -->
        <!--             <ComboBox Grid.Row="1" Grid.Column="1" -->
        <!--                       Classes="misa-input" -->
        <!--                       ItemsSource="{Binding Parent.NavigationService.LookupsStore.States}" -->
        <!--                       SelectedValue="{Binding StateId}" -->
        <!--                       SelectedValueBinding="{Binding Id}" -->
        <!--                       DisplayMemberBinding="{Binding Name}" -->
        <!--                       SelectedIndex="{Binding Parent.DetailedEntity.Item.State.Id}"/> -->
        <!--              -->
        <!--             <TextBlock Grid.Row="4" Grid.Column="0" Text=" " /> -->
        <!--             <StackPanel Grid.Row="4" Grid.Column="1" -->
        <!--                         Orientation="Horizontal" -->
        <!--                         Spacing="8" -->
        <!--                         HorizontalAlignment="Right"> -->
        <!--                 <Button Classes="misa-action" -->
        <!--                         Content="Cancel" -->
        <!--                         Command="{Binding CloseEditFormCommand}" /> -->
        <!--                 <Button Classes="misa-action" -->
        <!--                         Content="Save" -->
        <!--                         Command="{Binding UpdateTaskCommand}" /> -->
        <!--             </StackPanel> -->
        <!--         </Grid> -->
        <!-- -->
