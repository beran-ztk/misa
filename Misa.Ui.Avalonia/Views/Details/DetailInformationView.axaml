<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="1300"
             x:Class="Misa.Ui.Avalonia.Views.Details.DetailInformationView"
             xmlns:vm="clr-namespace:Misa.Ui.Avalonia.ViewModels.Details"
             x:DataType="vm:DetailInformationViewModel">

    <UserControl.Styles>

    <!-- Einheitlicher Card-Look -->
    <Style Selector="Border.misa-card">
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="Background" Value="{StaticResource BrushPrimaryBackgroundLighter}"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <!-- Headerzeile innerhalb einer Card -->
    <Style Selector="Grid.misa-card-header">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.misa-card-title">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Einheitlicher Input-Look -->
    <Style Selector="TextBox.misa-input">
        <Setter Property="Background" Value="{StaticResource BrushPrimaryBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="10,8"/>
    </Style>

    <Style Selector="ComboBox.misa-input">
        <Setter Property="Background" Value="{StaticResource BrushPrimaryBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="10,6"/>
    </Style>

    <Style Selector="NumericUpDown.misa-input">
        <Setter Property="Background" Value="{StaticResource BrushPrimaryBackground}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="10,6"/>
    </Style>

    <!-- Buttons: gleiche Höhe + saubere Abstände -->
    <Style Selector="Button.misa-action">
        <Setter Property="Height" Value="34"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}"/>
        <Setter Property="Background" Value="{StaticResource BrushPrimaryBackground}"/>
    </Style>

</UserControl.Styles>

    
    
    
<ScrollViewer>
    <StackPanel>
        
        <Border Classes="misa-card"
                IsVisible="{Binding Parent.HasDetailedEntity}">
            <StackPanel Spacing="12">
                <Grid Classes="misa-card-header"
                      ColumnDefinitions="*,Auto"
                      RowDefinitions="Auto">
                    <TextBlock Grid.Column="0"
                               Classes="misa-card-title"
                               Text="Quick Actions"/>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                Spacing="8">

                        <Button Classes="misa-action"
                                Content="Start Session"
                                Command="{Binding ShowSessionStartFormCommand}"
                                IsVisible="{Binding Parent.DetailedEntity.Item.CanStartSession}"/>

                        <Button Classes="misa-action"
                                Content="Pause Session"
                                Command="{Binding ShowSessionPauseFormCommand}"
                                IsVisible="{Binding Parent.DetailedEntity.Item.HasActiveSession}"/>
                    </StackPanel>
                </Grid>
                        
                
                <Border Padding="10"
                            CornerRadius="10"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BrushBorder}"
                            Background="{StaticResource BrushPrimaryBackground}"
                            IsVisible="{Binding IsStartFormOpen}">
                    <StackPanel Spacing="10">

                        <TextBlock Text="Start session"
                                   FontWeight="SemiBold"/>

                        <Grid ColumnDefinitions="140,*"
                              RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                              RowSpacing="8"
                              ColumnSpacing="10">

                            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Planned (min)" />
                            <NumericUpDown Grid.Row="0" Grid.Column="1"
                                           Classes="misa-input"
                                           Minimum="1" Maximum="600"
                                           Value="{Binding PlannedMinutes, Mode=TwoWay}" />

                            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Objective" />
                            <TextBox Grid.Row="1" Grid.Column="1"
                                     Classes="misa-input"
                                     Text="{Binding Objective, Mode=TwoWay}"
                                     Watermark="What are you doing?" />

                            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Auto stop" />
                            <CheckBox Grid.Row="2" Grid.Column="1"
                                      IsChecked="{Binding StopAutomatically, Mode=TwoWay}"
                                      Content="Stop automatically after planned duration" />

                            <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Text="Reason" />
                            <TextBox Grid.Row="3" Grid.Column="1"
                                     Classes="misa-input"
                                     IsEnabled="{Binding StopAutomatically}"
                                     Text="{Binding AutoStopReason, Mode=TwoWay}"
                                     Watermark="Optional reason" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text=" " />
                            <StackPanel Grid.Row="4" Grid.Column="1"
                                        Orientation="Horizontal"
                                        Spacing="8"
                                        HorizontalAlignment="Right">
                                <Button Classes="misa-action"
                                        Content="Cancel"
                                        Command="{Binding CloseSessionStartFormCommand}" />
                                <Button Classes="misa-action"
                                        Content="Save"
                                        Command="{Binding StartSessionCommand}" />
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </Border>
                        
                        
                <!-- Pause form -->
                <Border Padding="10"
                        CornerRadius="10"
                        BorderThickness="1"
                        BorderBrush="{StaticResource BrushBorder}"
                        Background="{StaticResource BrushPrimaryBackground}"
                        IsVisible="{Binding IsPauseFormOpen}">
                    <StackPanel Spacing="10">

                        <TextBlock Text="Pause session"
                                   FontWeight="SemiBold"/>

                        <Grid ColumnDefinitions="140,*"
                              RowDefinitions="Auto,Auto,Auto"
                              RowSpacing="8"
                              ColumnSpacing="10">

                            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Efficiency" />
                            <ComboBox Grid.Row="0" Grid.Column="1"
                                      Classes="misa-input"
                                      ItemsSource="{Binding EfficiencyTypes}"
                                      SelectedValue="{Binding EfficiencyId}"
                                      SelectedValueBinding="{Binding Id}"
                                      DisplayMemberBinding="{Binding Name}"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Concentration" />
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                      Classes="misa-input"
                                      ItemsSource="{Binding ConcentrationTypes}"
                                      SelectedValue="{Binding ConcentrationId}"
                                      SelectedValueBinding="{Binding Id}"
                                      DisplayMemberBinding="{Binding Name}" />

                            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Text="Summary" />
                            <StackPanel Grid.Row="2" Grid.Column="1" Spacing="8">
                                <TextBox Classes="misa-input"
                                         Text="{Binding Summary, Mode=TwoWay}"
                                         AcceptsReturn="True"
                                         TextWrapping="Wrap"
                                         MinHeight="80"
                                         Watermark="What happened? Short summary." />

                                <StackPanel Orientation="Horizontal"
                                            Spacing="8"
                                            HorizontalAlignment="Right">
                                    <Button Classes="misa-action"
                                            Content="Cancel"
                                            Command="{Binding CloseSessionPauseFormCommand}" />
                                    <Button Classes="misa-action"
                                            Content="Save"
                                            Command="{Binding PauseSessionCommand}" />
                                </StackPanel>
                            </StackPanel>

                        </Grid>

                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>


        <Border Padding="12"
                Margin="10"
                CornerRadius="10"
                BorderThickness="1"
                BorderBrush="{StaticResource BrushBorder}"
                Background="{StaticResource BrushPrimaryBackgroundLighter}"
                IsVisible="{Binding Parent.HasDetailedEntity}">

            <StackPanel Spacing="12">
                <TextBlock Text="Information"
                           FontSize="16"
                           Margin="10"
                           FontWeight="SemiBold"/>
                <!-- Top meta -->
                <Grid ColumnDefinitions="140,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="6">
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="ID" Opacity="0.7"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Parent.DetailedEntity.Id}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Title" Opacity="0.7"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Parent.DetailedEntity.Item.Title}" TextWrapping="Wrap"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Created" Opacity="0.7"/>
                    <TextBlock Grid.Row="2" Grid.Column="1"
                               Text="{Binding Parent.DetailedEntity.CreatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Updated" Opacity="0.7"/>
                    <TextBlock Grid.Row="3" Grid.Column="1"
                               Text="{Binding Parent.DetailedEntity.UpdatedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>
                </Grid>

                <!-- Optional interacted -->
                <Grid ColumnDefinitions="140,*" IsVisible="{Binding Parent.DetailedEntity.InteractedAt}">
                    <TextBlock Grid.Column="0" Text="Interacted" Opacity="0.7"/>
                    <TextBlock Grid.Column="1"
                               Text="{Binding Parent.DetailedEntity.InteractedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"/>
                </Grid>

                <!-- Cards -->
                <UniformGrid Columns="2" Rows="2" HorizontalAlignment="Stretch">
                    
                    <!-- Workflow -->
                    <Border Margin="0,0,8,8"
                            Padding="12"
                            CornerRadius="10"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BrushBorder}"
                            Background="{StaticResource BrushPrimaryBackground}">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Workflow" Opacity="0.7" FontSize="12"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Workflow.Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Workflow.Synopsis}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                    <!-- State -->
                    <Border Margin="8,0,0,8"
                            Padding="12"
                            CornerRadius="10"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BrushBorder}"
                            Background="{StaticResource BrushPrimaryBackground}">
                        <StackPanel Spacing="6">
                            <TextBlock Text="State" Opacity="0.7" FontSize="12"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Item.State.Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Item.State.Synopsis}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                    <!-- Priority -->
                    <Border Margin="0,8,8,0"
                            Padding="12"
                            CornerRadius="10"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BrushBorder}"
                            Background="{StaticResource BrushPrimaryBackground}">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Priority" Opacity="0.7" FontSize="12"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Item.Priority.Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Item.Priority.Synopsis}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                    <!-- Category -->
                    <Border Margin="8,8,0,0"
                            Padding="12"
                            CornerRadius="10"
                            BorderThickness="1"
                            BorderBrush="{StaticResource BrushBorder}"
                            Background="{StaticResource BrushPrimaryBackground}">
                        <StackPanel Spacing="6">
                            <TextBlock Text="Category" Opacity="0.7" FontSize="12"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Item.Category.Name}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding Parent.DetailedEntity.Item.Category.Synopsis}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                </UniformGrid>

            </StackPanel>
        </Border>


        <!-- Descriptions Header (nur wenn Liste nicht leer) -->
        <Border Padding="12"
                Margin="10"
                CornerRadius="10"
                BorderThickness="1"
                BorderBrush="{StaticResource BrushBorder}"
                Background="{StaticResource BrushPrimaryBackgroundLighter}"
                IsVisible="{Binding Parent.HasDetailedEntity}">
            
            <StackPanel Spacing="12">
                <TextBlock Text="Descriptions"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="10"/>

                <ItemsControl ItemsSource="{Binding Parent.DetailedEntity.Descriptions}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="10,6"
                                    Padding="0"
                                    Background="{StaticResource BrushPrimaryBackground}"
                                    CornerRadius="10"
                                    BorderThickness="1"
                                    BorderBrush="{StaticResource BrushBorder}">

                                <Grid ColumnDefinitions="6,*">
                                    <!-- Accent bar -->
                                    <Border Background="{StaticResource BrushAccent}"
                                            CornerRadius="10,0,0,10"
                                            Padding="12"/>

                                    <StackPanel Grid.Column="1"  Spacing="2" Margin="10">
                                        <TextBlock Text="{Binding Type.Name}"
                                                   FontSize="12"
                                                   Opacity="0.7"/>

                                        <TextBlock Text="{Binding Content}"
                                                   FontSize="13"
                                                   TextWrapping="Wrap"/>

                                        <TextBlock Text="{Binding CreatedAtUtc, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                                   HorizontalAlignment="Right"
                                                   Opacity="0.6"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>


                <!-- Add Description -->
                <Border Padding="10">
                    <Grid ColumnDefinitions="*,Auto"
                          ColumnSpacing="10"
                          VerticalAlignment="Center">

                        <TextBox Grid.Column="0"
                                 Classes="misa-input"
                                 Watermark="Description..."
                                 Foreground="{StaticResource BrushTextPrimary}"
                                 Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" />

                        <Button Grid.Column="1"
                                Width="38"
                                Height="38"
                                Background="{StaticResource BrushPrimaryBackground}"
                                BorderBrush="{StaticResource BrushBorder}"
                                BorderThickness="1"
                                Command="{Binding AddDescriptionCommand}">
                            <Image Width="16"
                                   Height="16"
                                   Source="{SvgImage /Assets/Images/MainNavigation/plus-circle.svg}" />
                        </Button>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>
        
        
    </StackPanel>
</ScrollViewer>
</UserControl>
