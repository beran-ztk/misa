<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shell="clr-namespace:Misa.Ui.Avalonia.App.Shell"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Misa.Ui.Avalonia.App.Shell.MainWindow"
        x:DataType="shell:MainWindowViewModel"
        Icon="/Assets/Images/Shells/nanoparticle.png"
        Title="Misa">

    <Grid>
        <ContentControl Content="{Binding MainWindowOverlay}"
                        IsVisible="{Binding CurrentMainOverlayOpen}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
        
        
        <Grid RowDefinitions="38,*,24"
              Background="{StaticResource BrushPrimaryBackground}"
              IsVisible="{Binding !CurrentMainOverlayOpen}">

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource BrushPrimaryBackground}"
                    Padding="12,8">
                <Grid ColumnDefinitions="*,Auto"
                      VerticalAlignment="Center">

                    <!-- Links: optionaler Titel / Breadcrumb / leer -->
                    <TextBlock Grid.Column="0"
                               Text="MISA"
                               FontSize="16"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <!-- Rechts: User-Bereich -->
                    <Grid Grid.Column="1"
                          VerticalAlignment="Center">

                        <!-- Account chip -->
                        <Border Background="{StaticResource BrushPrimaryBackgroundLight}"
                                BorderBrush="{StaticResource BrushBorder}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="10,4"
                                VerticalAlignment="Center">

                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    HorizontalContentAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Command="{Binding ToggleUserMenuCommand}">

                                <StackPanel Orientation="Horizontal"
                                            Spacing="6"
                                            VerticalAlignment="Center">

                                    <Image Width="16"
                                           Height="16"
                                           Source="{SvgImage /Assets/Images/MainNavigation/user.svg}" />

                                    <TextBlock Text="{Binding User.Username}"
                                               FontSize="11"
                                               Foreground="{StaticResource BrushTextPrimary}"
                                               VerticalAlignment="Center"/>

                                    <!-- optional chevron -->
                                    <Image Width="12"
                                           Height="12"
                                           Opacity="0.75"
                                           Source="{SvgImage /Assets/Images/MainNavigation/caret-down.svg}" />
                                </StackPanel>
                            </Button>
                        </Border>

                        <!-- Dropdown menu -->
                        <Border IsVisible="{Binding IsUserMenuOpen}"
                                Margin="0,42,0,0"
                                HorizontalAlignment="Right"
                                Background="{StaticResource BrushPrimaryBackgroundLight}"
                                BorderBrush="{StaticResource BrushBorder}"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="6"
                                Width="180"
                                ZIndex="100">

                            <StackPanel Spacing="4">

                                <!-- header row in menu -->
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="8,6">
                                    <Image Width="14" Height="14"
                                           Opacity="0.8"
                                           Source="{SvgImage /Assets/Images/MainNavigation/user.svg}" />
                                    <TextBlock Text="{Binding User.Username}"
                                               FontSize="11"
                                               Foreground="{StaticResource BrushTextSecondary}"/>
                                </StackPanel>

                                <Border Height="1"
                                        Background="{StaticResource BrushBorder}"
                                        Opacity="0.35"
                                        Margin="4,0"/>

                                <!-- Sign out item -->
                                <Button Background="Transparent"
                                        BorderThickness="0"
                                        CornerRadius="8"
                                        Padding="10,8"
                                        HorizontalContentAlignment="Left"
                                        Command="{Binding SignOutCommand}">

                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <Image Width="14" Height="14"
                                               Source="{SvgImage /Assets/Images/MainNavigation/sign-out.svg}" />
                                        <TextBlock Text="Sign out"
                                                   FontSize="12"
                                                   Foreground="{StaticResource BrushTextPrimary}"/>
                                    </StackPanel>
                                </Button>

                            </StackPanel>
                        </Border>

                    </Grid>


                </Grid>
            </Border>


            <!-- Main: Nav + Content + Info -->
            <Grid Grid.Row="1" ColumnDefinitions="150,*,Auto,40">

                <!-- Content -->
                <ContentControl Grid.Column="0" Content="{Binding Navigation}"/>
                <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" />
                <ContentControl Grid.Column="2" Content="{Binding NavigationService.NavigationStore.CurrentOverlay}" />
                <ContentControl Grid.Column="3" Content="{Binding Information}" />

                <!-- 1) Visuelles Backdrop (nur abdunkeln) -->
                <Border Grid.Column="1"
                        Background="#88000000"
                        CornerRadius="20"
                        Margin="10"
                        IsVisible="{Binding CurrentOverlayOpen}"
                        PointerPressed="OverlayBackdrop_PointerPressed"/>
            </Grid>
            
            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{StaticResource BrushPrimaryBackground}">
                <Grid Margin="12,0" ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource BrushTextSecondary}"
                               Text="{Binding BreadCrumbs}" />
                    <TextBlock Grid.Column="1"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource BrushTextSecondary}"
                               Text="{Binding Version}" />
                </Grid>
            </Border>
            
        </Grid>
    </Grid>
</Window>
