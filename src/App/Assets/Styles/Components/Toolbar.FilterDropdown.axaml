<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Trigger -->
    <Style Selector="ToggleButton.workspace-toolbar-filter-trigger">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
    </Style>

    <Style Selector="ToggleButton.workspace-toolbar-filter-trigger /template/ ContentPresenter">
        <Setter Property="CornerRadius" Value="4" />
    </Style>
    
    <Style Selector="ToggleButton.workspace-toolbar-filter-trigger TextBlock">
    </Style>

    <Style Selector="Popup.workspace-toolbar-filter-popup">
    </Style>

    <Style Selector="Border.workspace-toolbar-filter-popup-frame">
        <Setter Property="Background" Value="{StaticResource BrushPrimaryBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="6" />
    </Style>
    
    <Style Selector="Border.workspace-toolbar-filter-popup-frame CheckBox">
    </Style>

</Styles>