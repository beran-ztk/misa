<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Font sizes -->
    <x:Double x:Key="FontSizeSmall">10</x:Double>
    <x:Double x:Key="FontSizeAverage">12</x:Double>
    <x:Double x:Key="FontSizeMedium">14</x:Double>
    <x:Double x:Key="FontSizeLarge">16</x:Double>
    <x:Double x:Key="FontSizeBig">20</x:Double>
    <x:Double x:Key="FontSizeTitle">24</x:Double>

    <!-- Spacing -->
    <x:Double x:Key="SpacingSmall">4</x:Double>
    <x:Double x:Key="SpacingMedium">8</x:Double>
    <x:Double x:Key="SpacingLarge">12</x:Double>
    
    <!-- CornerRadius -->
    <CornerRadius x:Key="CornerRadiusButtons">8</CornerRadius>
    
</ResourceDictionary>
