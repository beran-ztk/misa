<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Pages.Scheduling.Header.SchedulerHeaderView"
             xmlns:main="clr-namespace:Misa.Ui.Avalonia.Features.Pages.Scheduling.Main"
             x:DataType="main:SchedulerMainWindowViewModel">

    <UserControl.Styles>

        <!-- Add Button: pill + icon + text (Task-Look) -->
        <Style Selector="Button.SchedulerAddButton">
            <Setter Property="Background" Value="{StaticResource BrushPrimaryBackgroundLighter}" />
            <Setter Property="BorderBrush" Value="{StaticResource BrushBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="999" />
            <Setter Property="Padding" Value="10,6" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style Selector="Button.SchedulerAddButton:pointerover">
            <Setter Property="Background" Value="{StaticResource BrushPrimaryBackgroundLight}" />
        </Style>

    </UserControl.Styles>

    <Border Padding="12"
            Background="{StaticResource BrushPrimaryBackground}">

        <Grid ColumnDefinitions="Auto,*"
              ColumnSpacing="10"
              VerticalAlignment="Center">

            <!-- Add -->
            <Button Grid.Column="0"
                    Classes="SchedulerAddButton"
                    Command="{Binding OpenAddScheduleCommand}">
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <Image Width="16"
                           Height="16"
                           Source="{SvgImage /Assets/Icons/Shell/Navigation/plus-circle.svg}" />
                    <TextBlock Text="Add"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrushTextPrimary}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <!-- Right side reserved (keeps spacing consistent with Task header) -->
            <ContentControl Grid.Column="1" />

        </Grid>
    </Border>

</UserControl>
