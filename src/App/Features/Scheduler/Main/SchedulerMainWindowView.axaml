<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:header="clr-namespace:Misa.Ui.Avalonia.Features.Scheduler.Header"
             xmlns:content="clr-namespace:Misa.Ui.Avalonia.Features.Scheduler.Content"
             xmlns:vm="clr-namespace:Misa.Ui.Avalonia.Features.Scheduler.Main"
             x:Class="Misa.Ui.Avalonia.Features.Scheduler.Main.SchedulerMainWindowView"
             x:DataType="vm:SchedulerMainWindowViewModel"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450">

    <Grid ColumnDefinitions="*,Auto,*">
        <Border Grid.Column="0"
                BorderThickness="0,0,1,0"
                BorderBrush="{StaticResource BrushBorder}">
            <Grid RowDefinitions="50,*">
                <header:SchedulerHeaderView Grid.Row="0" />
                <content:SchedulerContentView Grid.Row="1" />
            </Grid>
        </Border>

        <GridSplitter Grid.Column="1"
                      Background="{StaticResource BrushBorder}" />

        <ContentControl Grid.Column="2"
                        Background="{StaticResource BrushPrimaryBackground}"
                        Content="{Binding InfoView}" />
    </Grid>
</UserControl>