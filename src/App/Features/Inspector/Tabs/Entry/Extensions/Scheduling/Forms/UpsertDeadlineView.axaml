<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Inspector.Tabs.Entry.Extensions.Scheduling.Forms.UpsertDeadlineView"
             xmlns:root="clr-namespace:Misa.Ui.Avalonia.Features.Inspector.Tabs.Entry.Extensions.Scheduling.Forms"
             x:DataType="root:UpsertDeadlineViewModel">

    <StackPanel Classes="addpanel-body">

        <StackPanel Classes="addpanel-controls">
            <TextBlock Text="Select a date"
                       Classes="addpanel-text"/>
            <DatePicker Classes="addpanel-date"
                        SelectedDate="{Binding DeadlineDate}" />
        </StackPanel>

        <StackPanel Classes="addpanel-controls">
            <TextBlock Text="Select a time"
                       Classes="addpanel-text"/>
            <TimePicker Classes="addpanel-time"
                        SelectedTime="{Binding DeadlineTime}" />
        </StackPanel>

    </StackPanel>

</UserControl>