<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Inspector.Tabs.Entry.Extensions.Scheduling.EntryDeadlineView"
             xmlns:root="clr-namespace:Misa.Ui.Avalonia.Features.Inspector.Tabs.Entry.Base"
             x:DataType="root:InspectorEntryViewModel">

    <Border BorderThickness="0,0,0,1"
            BorderBrush="{StaticResource BrushBorder}"
            Padding="4,14">

        <Grid ColumnDefinitions="*,Auto"
              RowDefinitions="Auto,Auto"
              ColumnSpacing="12"
              VerticalAlignment="Center">

            <StackPanel Grid.Column="0" Grid.Row="0" Spacing="2"
                        IsVisible="{Binding HasDeadline}">
                <TextBlock Text="Deadline"
                           Opacity="0.7" />
                <TextBlock Text="{Binding DeadlineDisplay}" />
            </StackPanel>
            
            <StackPanel Grid.Column="0" Grid.Row="0" Spacing="2"
                        IsVisible="{Binding !HasDeadline}">
                <TextBlock Text="Has no deadline."
                           Opacity="0.7" />
            </StackPanel>

            <StackPanel Grid.Column="1" Grid.Row="0"
                        Orientation="Horizontal"
                        Spacing="8"
                        VerticalAlignment="Center">

                <Button Classes="workspace-toolbar-icon"
                        Command="{Binding ShowEditDeadlineFormCommand}">
                    <Image Source="{SvgImage /Assets/Icons/Common/edit.svg}" />
                </Button>

                <Button Classes="workspace-toolbar-icon"
                        IsEnabled="{Binding HasDeadline}"
                        Command="{Binding DeleteDeadlineCommand}">
                    <Image Source="{SvgImage /Assets/Icons/Common/trash.svg}" />
                </Button>

            </StackPanel>

            <StackPanel Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
                        Margin="0,16,0,0"
                        Classes="addpanel-controls"
                        IsVisible="{Binding ShowEditDeadline}">

                <TextBlock Text="Edit the currently active deadline."
                           IsVisible="{Binding HasDeadline}"
                           Classes="addpanel-text"/>
                <TextBlock Text="Set a deadline."
                           IsVisible="{Binding !HasDeadline}"
                           Classes="addpanel-text"/>

                <DatePicker Classes="addpanel-date"
                            SelectedDate="{Binding DeadlineDate}" />

                <TimePicker Classes="addpanel-time"
                            SelectedTime="{Binding DeadlineTime}" />

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Spacing="8"
                            Margin="0,8,0,0">

                    <Button Content="Cancel"
                            Classes="confirm-cancel-cancel"
                            Command="{Binding ShowEditDeadlineFormCommand}" />

                    <Button Content="Save"
                            Classes="confirm-cancel-confirm"
                            Command="{Binding UpsertDeadlineCommand}" />

                </StackPanel>

            </StackPanel>
        </Grid>
    </Border>

</UserControl>