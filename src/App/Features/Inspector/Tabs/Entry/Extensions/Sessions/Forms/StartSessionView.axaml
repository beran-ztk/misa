<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Inspector.Tabs.Entry.Extensions.Sessions.Forms.StartSessionView"
             xmlns:root="clr-namespace:Misa.Ui.Avalonia.Features.Inspector.Tabs.Entry.Extensions.Sessions.Forms"
             x:DataType="root:StartSessionViewModel">

    <StackPanel Classes="addpanel-body">

        <StackPanel Classes="addpanel-controls">
            <TextBlock Text="How many minutes do you plan in?"
                       Classes="addpanel-text"/>
            <NumericUpDown Classes="addpanel-num"
                           Minimum="1"
                           Maximum="600"
                           Value="{Binding PlannedMinutes, Mode=TwoWay}" />
        </StackPanel>

        <StackPanel Classes="addpanel-controls">
            <TextBlock Text="What is your objective?"
                       Classes="addpanel-text"/>
            <TextBox Classes="addpanel-oneliner"
                     Text="{Binding Objective, Mode=TwoWay}"
                     Watermark="What are you doing?" />
        </StackPanel>

        <StackPanel Classes="addpanel-controls">
            <TextBlock Text="Do you want the session to auto-stop and notify you at the planned time?"
                       Classes="addpanel-text"/>
            <CheckBox IsChecked="{Binding StopAutomatically, Mode=TwoWay}"
                      Content="Stop automatically after planned duration" />
        </StackPanel>

        <StackPanel Classes="addpanel-controls">
            <TextBlock Text="If you have a reason for auto-stop, note it here (optional)."
                       Classes="addpanel-text"/>
            <TextBox Classes="addpanel-oneliner"
                     IsEnabled="{Binding StopAutomatically}"
                     Text="{Binding AutoStopReason, Mode=TwoWay}"
                     Watermark="Optional reason" />
        </StackPanel>

    </StackPanel>
</UserControl>
