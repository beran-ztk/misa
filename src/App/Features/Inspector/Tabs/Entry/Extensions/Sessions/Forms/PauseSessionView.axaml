<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Inspector.Tabs.Entry.Extensions.Sessions.Forms.PauseSessionView"
             xmlns:root="clr-namespace:Misa.Ui.Avalonia.Features.Inspector.Tabs.Entry.Extensions.Sessions.Forms"
             x:DataType="root:PauseSessionViewModel">

    <Grid ColumnDefinitions="*">

        <StackPanel Grid.Column="0"
                    Classes="workspace-addpanel-body"
                    Spacing="16">

            <StackPanel Classes="workspace-addpanel-body">
                <TextBlock Text="Why do you want to pause the session?"
                           Classes="workspace-addpanel-body"
                           TextWrapping="Wrap"/>
                <TextBox Text="{Binding PauseReason, Mode=TwoWay}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         MinHeight="90"/>
            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>