<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Misa.Ui.Avalonia.Features.Scheduler.Header.SchedulerHeaderView"
             xmlns:vm="clr-namespace:Misa.Ui.Avalonia.Features.Scheduler.Main"
             x:DataType="vm:SchedulerMainWindowViewModel">
    
    <Border BorderThickness="0,0,0,1"
            Padding="12"
            Background="{StaticResource BrushPrimaryBackground}"
            BorderBrush="{StaticResource BrushBorder}">

        <Button Command="{Binding OpenAddScheduleCommand}">
            <Image Width="16"
                   Height="16"
                   Source="{SvgImage /Assets/Images/MainNavigation/plus-circle.svg}" />
        </Button>
    </Border>
    
</UserControl>
